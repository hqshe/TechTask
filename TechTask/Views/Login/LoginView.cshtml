@model UserModel
<link rel="stylesheet" type="text/css" href="~/css/login.css">
<div class="row">
    <div class="col-md-4">
        <h1 class="login">
            Log in
        </h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Login" class="form-control" aria-required="true" />
                    <label asp-for="Login" class="form-label"></label>
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" type="password" aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button asp-action = "Login" id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

            </form>
        </section>
    </div>
</div>